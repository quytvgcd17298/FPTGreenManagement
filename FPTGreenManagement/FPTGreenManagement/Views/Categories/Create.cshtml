@model FPTGreenManagement.Models.Category
@{
    ViewBag.Title = "Create";
}

<h2>Create a new Category</h2>

@Html.ValidationSummary(false, "", new { @class = "bg-danger" })

@using (Html.BeginForm("Create", "Categories", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.CategoryName)
        @Html.TextBoxFor(m => m.CategoryName,
          new { @class = "form-control", @placeholder = "Enter Category Name ..." })
        @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
}