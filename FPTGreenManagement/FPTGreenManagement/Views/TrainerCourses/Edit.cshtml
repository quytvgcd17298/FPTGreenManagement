@model FPTGreenManagement.ViewModels.TrainerCoursesViewModel
@{
                /**/

                ViewBag.Title = "Edit";
}

<h2>Edit Trainer in Course</h2>
@Html.ValidationSummary(false, "", new { @class = "bg-danger" })

@using (Html.BeginForm("Edit", "TrainerCourses", FormMethod.Post))
{
    @Html.HiddenFor(m => m.TrainerCourse.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.TrainerCourse.CourseId)
        @Html.DropDownListFor(m => m.TrainerCourse.CourseId,
         new SelectList(Model.Courses, "Id", "CourseName"),
         new { @class = "form-control" }
         )
        @Html.ValidationMessageFor(m => m.TrainerCourse.CourseId, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TrainerCourse.TrainerId)
        @Html.DropDownListFor(m => m.TrainerCourse.TrainerId,
         new SelectList(Model.Trainers, "Id", "UserName"),
         new { @class = "form-control" }
         )
        @Html.ValidationMessageFor(m => m.TrainerCourse.TrainerId, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
}


