@model FPTGreenManagement.ViewModels.TraineeCoursesViewModel
@{
    /**/

    ViewBag.Title = "Edit";
}

<h2>Edit Trainee in Course</h2>
@Html.ValidationSummary(false, "", new { @class = "bg-danger" })

@using (Html.BeginForm("Edit", "TraineeCourses", FormMethod.Post))
{
    @Html.HiddenFor(m => m.TraineeCourse.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.TraineeCourse.CourseId)
        @Html.DropDownListFor(m => m.TraineeCourse.CourseId,
         new SelectList(Model.Courses, "Id", "CourseName"),
         new { @class = "form-control" }
         )
        @Html.ValidationMessageFor(m => m.TraineeCourse.CourseId, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TraineeCourse.TraineeId)
        @Html.DropDownListFor(m => m.TraineeCourse.TraineeId,
         new SelectList(Model.Trainees, "Id", "UserName"),
         new { @class = "form-control" }
         )
        @Html.ValidationMessageFor(m => m.TraineeCourse.TraineeId, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
}


