@model IEnumerable<FPTGreenManagement.Models.TraineeCourse>
@{
    ViewBag.Title = "Index";
}

<h2>Trainee in Course</h2>
<p>
    @Html.ActionLink("Assign Trainee To Course", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Trainee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course)
        </th>
        <th></th>
    </tr>

    @foreach (var traineeCourse in Model)
    {
        <tr>
            <td>@traineeCourse.Trainee.UserName</td>
            <td>@traineeCourse.Course.CourseName</td>
            <td>
                @Html.ActionLink("Edit", "Edit", "TrainerCourses", new { id = traineeCourse.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", "TrainerCourses", new { id = traineeCourse.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>

    }

</table>