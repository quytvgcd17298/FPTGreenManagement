@model FPTGreenManagement.ViewModels.CourseCategoriesViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Course</h2>
@Html.ValidationSummary(false, "", new { @class = "bg-danger" })

@using (Html.BeginForm("Edit", "Courses", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Course.Id)

<div class="form-group">
    @Html.LabelFor(m => m.Course.CourseName)
    @Html.EditorFor(m => m.Course.CourseName, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.Course.CourseName, "", new { @class = "text-danger" })

</div>
<div class="form-group">
    @Html.LabelFor(m => m.Course.Description)
    @Html.EditorFor(m => m.Course.Description, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.Course.Description, "", new { @class = "text-danger" })

</div>
    <div class="form-group">
        @Html.LabelFor(m => m.Course.CategoryId)
        @Html.DropDownListFor(m => m.Course.CategoryId,
         new SelectList(Model.Categories, "Id", "CategoryName"),
         new { @class = "form-control" }
         )
        @Html.ValidationMessageFor(m => m.Course.CategoryId, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
}
