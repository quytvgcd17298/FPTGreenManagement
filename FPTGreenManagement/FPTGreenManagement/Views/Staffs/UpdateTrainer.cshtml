@model FPTGreenManagement.Models.Trainer
@{
    /**/

    ViewBag.Title = "UpdateTrainer";
}

<h2>Edit Trainer Info </h2>
@Html.ValidationSummary(false, "", new { @class = "bg-danger" })

@using (Html.BeginForm("UpdateTrainer", "Staffs", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.TrainerName)
        @Html.EditorFor(m => m.TrainerName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.TrainerName, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.WorkingPlace)
        @Html.EditorFor(m => m.WorkingPlace, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.WorkingPlace, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Telephone)
        @Html.EditorFor(m => m.Telephone,
         new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Telephone, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
}

