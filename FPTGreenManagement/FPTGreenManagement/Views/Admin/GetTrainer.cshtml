@model IEnumerable<FPTGreenManagement.Models.ApplicationUser>
@{
    ViewBag.Title = "GetTrainer";
}

<h2>Show all Trainers</h2>
<div class="row">
    <div class="col-md-4">
        <ul class="list-group">
            <li class="list-group-item active">Trainer List</li>
            @foreach (var trainer in Model)
            {
            <li class="list-group-item">
                @trainer.UserName
                <div>
                    @Html.ActionLink(
                      "EditPassword",
                      "ChangePasswordTrainer",
                      "Admin",
                      new {id = trainer.Id},
                      new {@class = "text-info"}
                    )
                </div>
                <div>
                    @Html.ActionLink(
                      "Delete Account",
                      "RemoveTrainer",
                      "Admin",
                      new {id = trainer.Id},
                      new {@class = "text-info"}
                    )
                </div>
            </li>
            }
        </ul>
    </div>
</div>