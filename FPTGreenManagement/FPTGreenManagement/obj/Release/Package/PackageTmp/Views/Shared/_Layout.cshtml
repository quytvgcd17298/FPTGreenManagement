<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FPTGreenManagement", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated)
                    {
                        if (User.IsInRole("Staff"))
                        {
                            <li>@Html.ActionLink("Course Management", "IndexCourse", "Staffs")</li>
                            <li>@Html.ActionLink("Trainer List", "TrainerList", "Staffs")</li>
                            <li>@Html.ActionLink("Trainee List", "TraineeList", "Staffs")</li>


                        }
                        if (User.IsInRole("Trainer"))
                        {
                            <li>@Html.ActionLink("My Trainer Info", "Index", "Trainers")</li>
                            <li>@Html.ActionLink("Course Management", "Index", "TrainerCourses")</li>


                        }
                        if (User.IsInRole("Trainee"))
                        {
                            <li>@Html.ActionLink("My Trainee Info", "Index", "Trainees")</li>
                            <li>@Html.ActionLink("All available courses", "IndexCourse", "Staffs")</li>
                            <li>@Html.ActionLink("Course Management", "Index", "TraineeCourses")</li>
                        }
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Website created by Van Quy - Dinh Huy</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
